<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.ttajun.mighty.GameView
        android:id="@+id/MightySurface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">
    </com.ttajun.mighty.GameView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">
            <com.gc.materialdesign.views.ButtonFloatSmall
                android:id="@+id/buttonBid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="#1E88E5"
                materialdesign:iconDrawable="@drawable/icn_button" />
            <com.gc.materialdesign.views.ButtonFloatSmall
                android:id="@+id/buttonDrop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="#1E88E5"
                materialdesign:iconDrawable="@drawable/icn_switch" />
            <com.gc.materialdesign.views.ButtonFloatSmall
                android:id="@+id/buttonFriend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="#1E88E5"
                materialdesign:iconDrawable="@drawable/icn_widget" />
            <com.gc.materialdesign.views.ButtonFloatSmall
                android:id="@+id/buttonReset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="#1E88E5"
                materialdesign:iconDrawable="@drawable/icn_progress" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>